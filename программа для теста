import tkinter as tk
def add_numbers():
    try:
        num1 = float(entry1.get())
        num2 = float(entry2.get())
        result = num1 + num2
        label_result.config(text="Результат: " + str(result))
    except ValueError:
        label_result.config(text="Введены некорректные значения")
root = tk.Tk()
label1 = tk.Label(root, text="Введите первое число:")
label1.pack()
entry1 = tk.Entry(root)
entry1.pack()
label2 = tk.Label(root, text="Введите второе число:")
label2.pack()
entry2 = tk.Entry(root)
entry2.pack()
button_add = tk.Button(root, text="Сложить", command=add_numbers)
button_add.pack()
label_result = tk.Label(root, text="Результат: ")
label_result.pack()
root.mainloop()
